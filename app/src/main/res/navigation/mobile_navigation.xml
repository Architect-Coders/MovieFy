<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mobile_navigation"
    app:startDestination="@+id/navigation_home">

    <fragment
        android:id="@+id/navigation_home"
        android:name="com.moviefy.ui.releaseFilms.ReleaseFilmsFragment"
        android:label="@string/title_home"
        tools:layout="@layout/fragment_home" />

    <fragment
        android:id="@+id/navigation_trending"
        android:name="com.moviefy.ui.trending.TrendingMoviesFragment"
        android:label="@string/title_trending"
        tools:layout="@layout/favourite_fragment" />

    <fragment
        android:id="@+id/navigation_favourites"
        android:name="com.moviefy.ui.favourites.FavouriteFragment"
        android:label="@string/title_favourites"
        tools:layout="@layout/trending_movies_fragment" />
</navigation>